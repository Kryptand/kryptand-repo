{
    "compilerOptions": {
      "noEmit": true,
      "jsx": "react",
      "target": "esnext",
      "module": "commonjs",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "removeComments": true,
      "rootDir": "./",
      "baseUrl": "./",
      "paths": {
        "@kryptand/*": ["packages/*/src"],
        "*": ["node_modules", "packages"]
      }
    },
    "awesomeTypescriptLoaderOptions": {
      "useBabel": true,
      "babelCore": "@babel/core"
    },
    "files": ["types/**"],
    "include": ["packages"],
    "exclude": ["node_modules", "packages/**/dist"]
  }